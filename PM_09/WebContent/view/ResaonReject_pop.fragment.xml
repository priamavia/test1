<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	>
	<Dialog id="reasonreject" title="{i18n>reasonforreject}" 
	        resizable="false" 
	        contentWidth="30rem" 
	        contentHeight="15rem"
	        draggable = "true" 
	       >
		<f:SimpleForm
    	    layout="ResponsiveGridLayout"
    	  	labelSpanL="2"
			labelSpanM="2"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsL="2"
			columnsM="2">
   			<f:content>
		        <TextArea id="resaon"  required="true"  rows = "5">
		        </TextArea>
    		</f:content>
	    </f:SimpleForm>  
		<beginButton>
			<Button
		       text="{i18n>confirm}"
		       press="onConfirmDialog_reason"/>
	    </beginButton>
	    <endButton>
		     <Button
		       text="{i18n>cancel}"
		       press="onCloseDialog_reason"/>
	    </endButton>
    </Dialog>
</core:FragmentDefinition>